<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Burners.BurnerManagement">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/burner_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f5"
                android:padding="10dp"
                android:text="Burners"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/recycle_burner_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/burner_type"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/burners_recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/recycle_burner_card">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/burner_summary_heading"
                            android:layout_width="460dp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:background="#f0f0f5"
                            android:padding="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Summary"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:id="@+id/burner_image_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_below="@id/burner_summary_heading"
                            android:layout_marginStart="165dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/Generic"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/burner_display"/>

                            <ImageView
                                android:id="@+id/orgaz"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/burner_display" />

                            <ImageView
                                android:id="@+id/patco"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/burner_display"/>

                            <ImageView
                                android:id="@+id/primus"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/burner_display"/>

                            <ImageView
                                android:id="@+id/sungas"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/burner_display"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/summary_attr_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/burner_image_summary"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="Attr"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="Total"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="generic"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="orgaz"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="patco"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="primus"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="sungus"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/summary_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/summary_attr_heading"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:id="@+id/attributes"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Stock: "
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sold: "
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Commission: "
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/total"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_toEndOf="@id/attributes"
                                android:paddingLeft="30dp"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/total_burner_number_summary_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/generic"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_toEndOf="@id/total"
                                android:paddingLeft="30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/total_burner_number_summary_generic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_generic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_generc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/orgaz_layout"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingStart="30dp"
                                android:layout_toEndOf="@id/generic"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/total_burner_number_summary_orgaz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_orgaz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_orgaz"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/patco_layout"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingLeft="30dp"
                                android:layout_toEndOf="@id/orgaz_layout"
                                android:orientation="vertical">



                                <TextView
                                    android:id="@+id/total_burner_number_summary_patco"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_patco"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_patco"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/primus_layout"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingLeft="30dp"
                                android:layout_toEndOf="@id/patco_layout"
                                android:orientation="vertical">



                                <TextView
                                    android:id="@+id/total_burner_number_summary_primus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_primus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_primus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="70dp"
                                android:id="@+id/sungus_layout"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingStart="30dp"
                                android:layout_toEndOf="@id/primus_layout"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/total_burner_number_summary_sungus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_sungus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_sungus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/summary_value"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>