<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grills.GrillsManagement">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/grill_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f5"
                android:padding="10dp"
                android:text="Grills"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/single_pipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grill_heading">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:onClick="UpdateGrill">


                        <ImageView
                            android:id="@+id/gas_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/pipe_d" />

                        <LinearLayout
                            android:id="@+id/weight_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gas_image"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stock: "
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/grill_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ttnumber_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/weight_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sold: "
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/grill_sold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff9900"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/full_number_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ttnumber_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Commission: "
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/grill_commission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#00ff00"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/single_pipe"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/regulator_summary_heading"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="20dp"
                            android:background="#f0f0f5"
                            android:padding="10dp"
                            android:text="Summary"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:id="@+id/regulator_image_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/regulator_summary_heading"
                            android:layout_marginStart="165dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/regulator_13kg"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/grill_d" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/summary_attr_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/regulator_image_summary"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="Attr"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="Total"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="Single Grill"
                                android:textAlignment="center" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/summary_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/summary_attr_heading"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:id="@+id/attributes"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Stock: "
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sold: "
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Commission: "
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/total"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_toEndOf="@id/attributes"
                                android:orientation="vertical"
                                android:paddingLeft="30dp">


                                <TextView
                                    android:id="@+id/total_regulator_number_summary_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_regulator_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/regulator_commission_summary_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/regulator_13kg_layout"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_toEndOf="@id/total"
                                android:orientation="vertical"
                                android:paddingLeft="30dp">

                                <TextView
                                    android:id="@+id/total_regulator_number_summary_13kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/regulator_sold_summary_13kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/regulator_commission_summary_13kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/summary_value"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>