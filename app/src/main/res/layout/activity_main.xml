<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">

        <RelativeLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            tools:ignore="MissingConstraints">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fireimage" />

            <TextView
                android:id="@+id/cart_counter"
                android:layout_width="10dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#FF0004"
                android:text="0"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cart_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/cart_counter"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_baseline_shopping_cart_24" />


            <EditText
                android:id="@+id/search_bar"
                android:layout_width="150dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/logo"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_border"
                android:backgroundTint="@color/white"
                android:hint="Search..."
                android:layout_marginTop="3dp"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Search"
                android:onClick="SearchOrder"
                android:background="@drawable/rounded_corner"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:backgroundTint="#00A2FF"
                android:layout_toRightOf="@id/search_bar"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cart_counter"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#00A2FF"
                android:hint="Place Order"
                android:onClick="PlaceOrder"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColorHint="@color/white"
                android:textSize="10dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/more_fragments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_bar"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navigation"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="16dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/app_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <ListView
            android:id="@+id/searchedItems"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/ToastCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/toast_message"
            android:padding="30dp"
            android:text="Item to cart added"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/vicmak_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        app:menu="@menu/vicmak_bottom_menu" />
</RelativeLayout>