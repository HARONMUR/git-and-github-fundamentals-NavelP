<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Regulators.RegulatorsManagement">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/regulator_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f0f5"
                android:padding="10dp"
                android:text="Regulators"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/recycle_regulator_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/regulator_type"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/regulators_recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>


            </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/recycle_regulator_card">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/regulator_summary_heading"
                            android:layout_width="480dp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:background="#f0f0f5"
                            android:padding="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Summary"
                            android:textAlignment="center" />

                        <LinearLayout
                            android:id="@+id/regulator_image_summary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_below="@id/regulator_summary_heading"
                            android:layout_marginStart="165dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/regulator_13kg"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/regulator_d"/>

                            <ImageView
                                android:id="@+id/regulator_6kg"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/regulator_d" />

                            <ImageView
                                android:id="@+id/ampia"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/regulator_d"/>

                            <ImageView
                                android:id="@+id/cosco"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/regulator_d"/>

                            <ImageView
                                android:id="@+id/generic_tecno"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/regulator_d"/>

                            <ImageView
                                android:id="@+id/pac"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/regulator_d"/>



                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/summary_attr_heading"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/regulator_image_summary"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="Attr"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="Total"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="13kg"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="6kg"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="ampia"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="cosco"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="generic_tecno"
                                android:textAlignment="center" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:background="#f0f0f5"
                                android:text="pac"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/summary_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/summary_attr_heading"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:id="@+id/attributes"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Stock: "
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sold: "
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Commission: "
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/total"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_toEndOf="@id/attributes"
                                android:paddingLeft="30dp"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/total_regulator_number_summary_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_regulator_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/regulator_commission_summary_t"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/regulator_13kg_layout"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:layout_toEndOf="@id/total"
                                android:paddingLeft="30dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/total_regulator_number_summary_13kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/regulator_sold_summary_13kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/regulator_commission_summary_13kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/regulator_6kg_layout"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingStart="30dp"
                                android:layout_toEndOf="@id/regulator_13kg_layout"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/total_regulator_number_summary_6kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/regulator_sold_summary_6kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/regulator_commission_summary_6kg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/ampia_layout"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingLeft="30dp"
                                android:layout_toEndOf="@id/regulator_6kg_layout"
                                android:orientation="vertical">



                                <TextView
                                    android:id="@+id/total_regulator_number_summary_ampia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_ampia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_ampia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cosco_layout"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingLeft="30dp"
                                android:layout_toEndOf="@id/ampia_layout"
                                android:orientation="vertical">



                                <TextView
                                    android:id="@+id/total_regulator_number_summary_cosco"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_cosco"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_cosco"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="80dp"
                                android:id="@+id/generic_tecno_layout"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingStart="30dp"
                                android:layout_toEndOf="@id/cosco_layout"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/total_regulator_number_summary_generic_tecno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_generic_tecno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_generic_tecno"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="70dp"
                                android:id="@+id/pac_layout"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:paddingStart="30dp"
                                android:layout_toEndOf="@id/generic_tecno_layout"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/total_regulator_number_summary_pac"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="90"
                                    android:textColor="#ff9900"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sold_summary_pac"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="40"
                                    android:textColor="#00ff00"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/commission_summary_pac"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="50"
                                    android:textColor="#ff0000"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/summary_value"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">


                        </LinearLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>