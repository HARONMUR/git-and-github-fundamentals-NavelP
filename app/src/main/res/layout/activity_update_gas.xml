<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Gas.UpdateGas">

    <TextView
        android:id="@+id/update_gas_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#f0f0f5"
        android:padding="10dp"
        android:text="Update Gas Database"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingBottom="20dp"
            android:layout_height="60dp"
            android:background="#FFBB01"
            android:padding="20dp"
            android:text="Refilling Price"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/refilling_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Refilling Price..."
            android:inputType="number"
            android:padding="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingBottom="20dp"
            android:layout_height="60dp"
            android:background="#FFBB01"
            android:padding="20dp"
            android:text="Selling Price"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/selling_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Selling Price..."
            android:inputType="number"
            android:padding="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingBottom="20dp"
            android:layout_height="60dp"
            android:background="#FFBB01"
            android:padding="20dp"
            android:text="Empty cylinder price"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/empty_cylinder_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selling_price"
            android:hint="Enter Empty Cylinder Price..."
            android:inputType="number"
            android:padding="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingBottom="20dp"
            android:layout_height="60dp"
            android:background="#FFBB01"
            android:text="Complete gas price"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/complete_gas_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_cylinder_price"
            android:hint="Enter Complete Gas Price..."
            android:inputType="number"
            android:padding="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingBottom="20dp"
            android:layout_height="60dp"
            android:background="#FFBB01"
            android:padding="20dp"
            android:text="full cylinders"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/full"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full Cylinders..."
            android:inputType="number"
            android:padding="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingBottom="20dp"
            android:layout_height="60dp"
            android:background="#FFBB01"
            android:padding="20dp"
            android:text="Empty cylinders"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/full"
            android:hint="Enter Empty Cylinders..."
            android:inputType="number"
            android:padding="20dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:hint="update"
            android:backgroundTint="#00cc44"
            android:layout_marginEnd="130dp"
            android:textColorHint="@color/white"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="#ff3300"
            android:hint="cancel"
            android:textColorHint="@color/white" />

    </LinearLayout>


</LinearLayout>