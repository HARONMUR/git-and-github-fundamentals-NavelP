<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:id="@+id/displayGas"
        android:background="#bfbfbf">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Gas"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gas_arrow"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/gas_sales_recycle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:id="@+id/displayBurner"
        android:background="#bfbfbf">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Burner"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/burner_arrow"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/burner_sales_recycle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:id="@+id/displayRegulator"
        android:background="#bfbfbf">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Regulator"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regulator_arrow"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/regulator_sales_recycle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:id="@+id/displayGrills_Pipes"
        android:background="#bfbfbf">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Grills and Pipes"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/g_p_arrow"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/grills_and_pipes_sales_recycle"/>

</LinearLayout>