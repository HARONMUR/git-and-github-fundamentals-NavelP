<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".users.ViewUsers">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/search_user"
        android:hint="Search vicmak user..."
        android:drawableEnd="@drawable/ic_baseline_person_search_24"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerTable"
        android:layout_below="@id/search_user"
        android:layout_margin="10dp">

        <TableRow
            android:background="@color/deep_yellow">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="No."
                android:padding="10sp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:textColor="@color/white"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:padding="10sp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/phone_password"
                android:padding="10sp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_weight="4"
                android:gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/actions"
                android:padding="10sp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_weight="3"
                android:gravity="center_horizontal"
                android:textColor="@color/white"/>
        </TableRow>

    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vicmak_users"
        android:layout_below="@id/headerTable"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>