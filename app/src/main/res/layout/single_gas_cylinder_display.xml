<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:textAlignment="center"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:id="@+id/gas_name"
            android:background="#f0f0f5"
            android:text="Pro Gas"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/gas_image"
            android:src="@drawable/pro_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gas_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gas_image"
            android:id="@+id/weight_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cylinder Weight: "
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gas_weight"
                android:text="6kg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight_layout"
            android:layout_margin="5dp"
            android:id="@+id/ttnumber_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Number: "
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_gas_cylinder_number"
                android:textColor="#ff9900"
                android:textStyle="bold"
                android:text="90"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ttnumber_layout"
            android:layout_margin="5dp"
            android:id="@+id/full_number_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filled Cylinders: "
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gas_cylinder_full"
                android:textColor="#00ff00"
                android:textStyle="bold"
                android:text="40"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_number_layout"
            android:layout_margin="5dp"
            android:id="@+id/empty_number_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty Cylinders: "
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gas_cylinder_empty"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:text="50"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/empty_number_layout"
            android:layout_margin="5dp"
            android:id="@+id/commission_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Commission: "
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gas_cylinder_commission"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:text="50"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>