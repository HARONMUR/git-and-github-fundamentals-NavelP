<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/gas_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f5"
            android:padding="10dp"
            android:text="Gas"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/recycle_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gas_type"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gas_cylinders_recycle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>


        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycle_card">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycle_card"
                android:layout_margin="10dp"
                android:padding="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/summary_heading"
                        android:layout_width="430dp"
                        android:layout_height="wrap_content"
                        android:background="#f0f0f5"
                        android:padding="10dp"
                        android:text="Summary"
                        android:textAlignment="center" />

                    <LinearLayout
                        android:id="@+id/gas_image_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/summary_heading"
                        android:layout_marginLeft="200dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/summary_6kg"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/summary_heading"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/pro_2" />

                        <ImageView
                            android:id="@+id/summary_13kg"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/summary_heading"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/k_13kg" />

                        <ImageView
                            android:id="@+id/summary_25kg"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_below="@id/summary_heading"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/rangi_25kg" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/summary_attr_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gas_image_summary"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#f0f0f5"
                            android:text="Attribute"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#f0f0f5"
                            android:text="Total"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#f0f0f5"
                            android:text="6kg"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#f0f0f5"
                            android:text="13kg"
                            android:textAlignment="center" />

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="#f0f0f5"
                            android:text="25kg"
                            android:textAlignment="center" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/summary_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/summary_attr_heading"
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:id="@+id/attributes"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Cylinders: "
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Cylinders: "
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Empty Cylinders: "
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ex Cylinders:"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Commission: "
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/total"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@id/attributes"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/total_gas_cylinder_number_summary_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:textColor="#ff9900"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_full_summary_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                android:textColor="#00ff00"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_empty_summary_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="#ff0000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_exchanged_summary_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:textColor="#000066"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_commission_summary_t"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:textColor="#000066"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/skg"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@id/total"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/total_gas_cylinder_number_summary_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:textColor="#ff9900"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_full_summary_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                android:textColor="#00ff00"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_empty_summary_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="#ff0000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_exchanged_summary_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="#000066"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_commission_summary_s"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textColor="#000066"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tkg"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@id/skg"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/total_gas_cylinder_number_summary_tkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:textColor="#ff9900"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_full_summary_tkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                android:textColor="#00ff00"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_empty_summary_tkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="#ff0000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_exchanged_summary_tkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textColor="#000066"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_commission_summary_tkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textColor="#000066"
                                android:textStyle="bold" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/tfkg"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="20dp"
                            android:layout_toRightOf="@id/tkg"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/total_gas_cylinder_number_summary_tfkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90"
                                android:textColor="#ff9900"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_full_summary_tfkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                android:textColor="#00ff00"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_empty_summary_tfkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textColor="#ff0000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_exchanged_summary_tfkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="#000066"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/gas_cylinder_commission_summary_tfkg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textColor="#000066"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/summary_value"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">


                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </HorizontalScrollView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>