<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner">

            <TableRow
                android:background="#FFBB01">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gs. Type"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gs. Weight"
                    android:padding="5sp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="No. Sold"
                    android:padding="5sp"
                    android:textSize="14sp"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Credit"
                    android:padding="5sp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:padding="2sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="3"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white" />

            </TableRow>

            <TableRow
                android:background="@color/white">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ProGas"
                        android:padding="5sp"
                        android:textStyle="bold"
                        android:id="@+id/gas_name"
                        android:textSize="14sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pro_2"
                        android:id="@+id/gas_image"/>

                </LinearLayout>

                <TableLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="6kgs"
                            android:padding="2sp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="13kgs"
                            android:padding="2sp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="25kgs"
                            android:padding="2sp"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/skgSold"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/tkgSold"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/tfkgSold"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                </TableLayout>


                <TableLayout
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/skgCredit"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/tkgCredit"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/tfkgCredit"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                </TableLayout>


                <TableLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/skgCash"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/tkgCash"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                    <TableRow
                        android:background="@color/white">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:padding="2sp"
                            android:id="@+id/tfkgCash"
                            android:textSize="14sp"
                            android:layout_weight="4"
                            android:gravity="center_horizontal"/>

                    </TableRow>

                </TableLayout>

            </TableRow>

            <TableRow
                android:padding="10dp"
                android:background="#FFBB01">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sub-Totals:"
                    android:textColor="@color/white"
                    android:padding="2sp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_weight="9"
                    android:layout_gravity="start"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingStart="0sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:id="@+id/salesSoldTotal"
                    android:textSize="14sp"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingStart="12sp"
                    android:textStyle="bold"
                    android:id="@+id/salesCreditTotal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingStart="16sp"
                    android:textStyle="bold"
                    android:id="@+id/salesCashTotal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"/>

            </TableRow>


        </TableLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>